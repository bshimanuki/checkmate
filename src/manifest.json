{
  "manifest_version": 2,
  "name": "Checkmate Extension",
  "version": "0.1",
  "author": "Brian Shimanuki",

  "description": "Helper for iframe management for puzzle solving.",

  "background": {
    "scripts": [
      "browser-polyfill.js",
      "background.js"
    ]
  },

  "content_scripts": [
    {
      "matches": [
        "*://localhost/*",
        "*://checkmate.teammatehunt.com/*"
      ],
      "js": ["rootframe.js"]
    },
    {
      "matches": ["<all_urls>"],
      "js": ["subframe.js"],
      "all_frames:": true
    }
  ],

  "web_accessible_resources": [
    "discord.css",
    "drive.css"
  ],

  "permissions": [
    "<all_urls>",
    "tabs",
    "webNavigation",
    "webRequest",
    "webRequestBlocking"
  ]
}
