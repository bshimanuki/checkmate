{
  "manifest_version": 2,
  "name": "Checkmate Extension",
  "version": "0.1",
  "author": "Brian Shimanuki",

  "description": "Helper for iframe management for puzzle solving.",

  "background": {
    "scripts": [
      "background.js"
    ]
  },

  "content_scripts": [
    {
      "matches": [
        "*://localhost/*",
        "*://checkmate.teammatehunt.com/*"
      ],
      "js": [
        "rootframe.js",
        "keyhandler.js"
      ],
      "run_at": "document_start"
    }
  ],

  "web_accessible_resources": [
    "discord.css",
    "drive.css"
  ],

  "permissions": [
    "<all_urls>",
    "tabs",
    "webNavigation",
    "webRequest",
    "webRequestBlocking"
  ]
}
